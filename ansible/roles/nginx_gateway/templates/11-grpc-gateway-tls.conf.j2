# gRPC Gateway over TLS (HTTP/2 on port 443)

server {
    listen 443 ssl http2;
    server_name _;

    ssl_certificate     /etc/nginx/ssl/nginx-gateway.crt;
    ssl_certificate_key /etc/nginx/ssl/nginx-gateway.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers HIGH:!aNULL:!MD5;

    access_log /var/log/nginx/grpc_hello_tls_access.log grpc_combined;

    location /helloworld.Greeter/ {
        grpc_pass grpc://grpc_backend_hello;
        grpc_set_header X-Request-ID $request_id;

        grpc_connect_timeout 2s;
        grpc_read_timeout    5s;
        grpc_send_timeout    5s;

        grpc_next_upstream       error timeout;
        grpc_next_upstream_tries 3;
    }

    location /grpc.health.v1.Health/ {
        grpc_pass grpc://grpc_backend_hello;
        grpc_set_header X-Request-ID $request_id;

        grpc_connect_timeout 2s;
        grpc_read_timeout    5s;
        grpc_send_timeout    5s;
    }
}
