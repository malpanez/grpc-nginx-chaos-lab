# gRPC gateway (clear-text HTTP/2) on port 8080
# Upstream is built dynamically from the Ansible group "grpc_apps"

upstream grpc_backend_hello {
    zone grpc_backend_hello 64k;

    {% for host in groups['grpc_apps'] %}
    server {{ hostvars[host].ansible_host }}:{{ hostvars[host].grpc_app_port | default(50051) }} max_fails=3 fail_timeout=30s;
    {% endfor %}

    # Reuse connections to upstream gRPC servers
    keepalive 64;
}

server {
    listen 8080;
    http2  on;

    server_name _;

    # Dedicated access log for this gRPC service
    access_log /var/log/nginx/grpc_hello_access.log grpc_combined;

    # gRPC service endpoint (HTTP/2) for helloworld.Greeter
    location /helloworld.Greeter/ {
        grpc_pass grpc://grpc_backend_hello;
        grpc_set_header X-Request-ID $request_id;

        # gRPC timeouts â€“ detect slow or unresponsive backends
        grpc_connect_timeout 2s;
        grpc_read_timeout    5s;
        grpc_send_timeout    5s;

        # Failover behavior between upstreams
        grpc_next_upstream       error timeout;
        grpc_next_upstream_tries 3;
    }

    # gRPC health service passthrough
    location /grpc.health.v1.Health/ {
        grpc_pass grpc://grpc_backend_hello;
        grpc_set_header X-Request-ID $request_id;

        grpc_connect_timeout 2s;
        grpc_read_timeout    5s;
        grpc_send_timeout    5s;
    }
}
